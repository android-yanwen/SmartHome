<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="请输入13040872678收到的短信验证码"/>
    <EditText
        android:id="@+id/register_input_vertify_code_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textedit_border"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:inputType="phone"
        android:hint="请输入验证码"/>
    <Button
        android:id="@+id/register_next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_selector"
        android:text="下一步"/>
    <TextView
        android:id="@+id/register_again_obtain_verify_code_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:clickable="true"
        android:textColor="@color/colorBlack"
        android:text="重新获取验证码(60)"/>
</LinearLayout>