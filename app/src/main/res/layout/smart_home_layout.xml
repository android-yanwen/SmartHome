<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/household_ctrl_scrollv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbarStyle="outsideOverlay"
    android:padding="0dp"
    android:background="#eee">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/infrared_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="@drawable/item_selector"
            android:padding="5dp">
            <ImageView
                android:id="@+id/infrared_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_infrared_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/infrared_img"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:text="红外控制"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/mm_submenu_normal"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorSplit"/>
        <RelativeLayout
            android:id="@+id/led_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:clickable="true"
            android:background="@drawable/item_selector">
            <ImageView
                android:id="@+id/led_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_ctrl_len_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/led_img"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:text="LED灯带"/>
            <com.gta.smart.slideswitch.SlideSwitch
                android:id="@+id/id_leds_slide"
                android:layout_width="@dimen/dimen_width_60"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorSplit"/>
        <RelativeLayout
            android:id="@+id/humidifier_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:clickable="true"
            android:background="@drawable/item_selector">
            <ImageView
                android:id="@+id/humidifier_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_humidifer_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/humidifier_img"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:text="加湿器"/>
            <com.gta.smart.slideswitch.SlideSwitch
                android:id="@+id/id_humidifier_slide"
                android:layout_width="@dimen/dimen_width_60"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorSplit"/>
        <RelativeLayout
            android:id="@+id/overall_remote_ctrl_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:clickable="true"
            android:background="@drawable/item_selector">
            <ImageView
                android:id="@+id/on_off_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_on_off_icon"/>
            <TextView
                android:layout_toRightOf="@id/on_off_iv"
                android:id="@+id/on_off_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:text="一体式遥控开关"/>
            <com.gta.smart.slideswitch.SlideSwitch
                android:id="@+id/id_overal_remote_ctrl_slide"
                android:layout_width="@dimen/dimen_width_60"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorSplit"/>
        <RelativeLayout
            android:id="@+id/embedded_remote_ctrl_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:clickable="true"
            android:background="@drawable/item_selector">
            <ImageView
                android:id="@+id/switch_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_embedded_ctrl_icon"/>
            <TextView
                android:layout_toRightOf="@id/switch_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:text="嵌入式遥控开关"/>
            <com.gta.smart.slideswitch.SlideSwitch
                android:id="@+id/id_embedded_remote_ctrl_slide"
                android:layout_width="@dimen/dimen_width_60"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorSplit"/>
        <RelativeLayout
            android:id="@+id/corridor_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:clickable="true"
            android:background="@drawable/item_selector">
            <ImageView
                android:id="@+id/corridor_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_corridor_icon"/>
            <TextView
                android:layout_toRightOf="@id/corridor_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:text="走廊灯"/>
            <com.gta.smart.slideswitch.SlideSwitch
                android:id="@+id/id_corridor_led_slide"
                android:layout_width="@dimen/dimen_width_60"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorSplit"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:clickable="true"
            android:background="@drawable/item_selector">
            <ImageView
                android:id="@+id/adjust_led_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_adjust_light_icon"/>
            <TextView
                android:layout_toRightOf="@id/adjust_led_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:text="可调灯"/>
            <SeekBar
                android:layout_width="@dimen/dimen_seek_bar_width"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:max="100"
                android:background="@android:color/transparent"
                android:progressDrawable="@drawable/seekbar_define_color_style"
                android:thumb="@drawable/seekbar_thumb"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorSplit"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:clickable="true"
            android:background="@drawable/item_selector">
            <ImageView
                android:id="@+id/electic_drape_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_electric_drape_icon"/>
            <TextView
                android:id="@+id/electric_drape_tv"
                android:layout_toRightOf="@id/electic_drape_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:text="电动窗帘"/>
            <SeekBar
                android:id="@+id/electric_drape_bar"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dimen_seek_bar_width"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:max="100"
                android:background="@android:color/transparent"
                android:progressDrawable="@drawable/seekbar_define_color_style"
                android:thumb="@drawable/seekbar_thumb"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorSplit"/>
    </LinearLayout>

</ScrollView>