<?xml version="1.0" encoding="utf-8"?>
<com.handmark.pulltorefresh.library.PullToRefreshScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    ptr:ptrMode="both">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="开启你的智能生活"/>
        <RelativeLayout
            android:id="@+id/return_home_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onClicked"
            android:background="@drawable/item_selector">
            <ImageView
                android:id="@+id/return_home_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/scene_return_home_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/return_home_img"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="回家模式"/>
            <CheckBox
                android:id="@+id/return_home_apply_btn"
                android:layout_width="68dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@null"
                android:background="@drawable/scene_checkbox_bk"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/leave_home_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onClicked"
            android:background="@drawable/item_selector">
            <ImageView
                android:id="@+id/leave_home_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/scene_leave_home_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/leave_home_img"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="离家模式"/>
            <CheckBox
                android:id="@+id/leave_home_apply_btn"
                android:layout_width="68dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@null"
                android:background="@drawable/scene_checkbox_bk" />
        </RelativeLayout>
    </LinearLayout>
</com.handmark.pulltorefresh.library.PullToRefreshScrollView>
